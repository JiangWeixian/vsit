{
  "name": "vsit-monorepo",
  "version": "0.0.0",
  "private": true,
  "packageManager": "pnpm@8.14.0",
  "description": "vsit monorepo",
  "keywords": ["vsit"],
  "license": "MIT",
  "homepage": "https://github.com/vsit#readme",
  "repository": {
    "url": "git+https://github.com/vsit.git",
    "type": "git"
  },
  "bugs": {
    "url": "https://github.com/vsit/issues"
  },
  "author": {
    "name": "JiangWeixian",
    "email": "jiangweixian1994@gmail.com"
  },
  "scripts": {
    "test": "pnpm run build:cli && pnpm --filter=./packages/** run test",
    "dev": "pnpm --filter=!./packages/client dev",
    "play": "pnpm --filter=./packages/client dev",
    "play:electron": "pnpm --filter=./packages/client dev:electron",
    "preview": "pnpm --filter=./packages/vsit preview",
    "build:cli": "pnpm --filter=./packages/vsit build",
    "build:web": "pnpm --filter=./packages/client build",
    "build:copy": "esno ./scripts/client.ts",
    "build": "run-s build:*",
    "build-electron": "pnpm --filter=./packages/client build:electron",
    "ci:publish:electron": "pnpm run build && pnpm --filter=./packages/client publish:electron",
    "ci:publish": "pnpm run build && pnpm changeset publish",
    "ci:version": "pnpm changeset version",
    "ci:snapshot": "pnpm changeset version --snapshot snapshot",
    "ci:prerelease": "pnpm run build && pnpm changeset publish --no-git-tag --snapshot",
    "lint:fix": "eslint . --fix",
    "prepare": "husky install"
  },
  "lint-staged": {
    "**/**/*.{js,ts,tsx,vue,json}": ["eslint --fix"]
  },
  "devDependencies": {
    "@aiou/eslint-config": "1.2.1",
    "@changesets/cli": "^2.24.4",
    "@types/fs-extra": "^11.0.1",
    "@types/node": "^20.1.3",
    "cz-emoji": "1.3.2-canary.2",
    "eslint": "8.56.0",
    "esno": "^0.16.3",
    "fs-extra": "^11.1.1",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "npm-run-all": "^4.1.5",
    "typescript": "5.1.6"
  },
  "overrides": {
    "vite": "5.0.10"
  }
}
