{
  "name": "vit-monorepo",
  "version": "0.0.0",
  "private": true,
  "description": "vit monorepo",
  "keywords": ["vit"],
  "license": "MIT",
  "homepage": "https://github.com/vit#readme",
  "repository": {
    "url": "git+https://github.com/vit.git",
    "type": "git"
  },
  "bugs": {
    "url": "https://github.com/vit/issues"
  },
  "author": {
    "name": "JiangWeixian",
    "email": "jiangweixian1994@gmail.com"
  },
  "scripts": {
    "test": "pnpm --filter=./packages/** run vitest",
    "dev:cli": "pnpm --filter=./packages/vit dev",
    "dev": "pnpm --filter=./packages/client dev",
    "build:cli": "pnpm --filter=./packages/vit build",
    "build:client": "pnpm --filter=./packages/client build",
    "build:copy": "pnpm --filter=./packages/vit copy-client",
    "build": "run-s build:*",
    "ci:publish": "pnpm changeset publish",
    "ci:version": "pnpm changeset version",
    "ci:snapshot": "pnpm changeset version --snapshot beta",
    "ci:prerelease": "pnpm run build && pnpm changeset publish --tag beta",
    "lint:fix": "eslint . --fix",
    "prepare": "husky install"
  },
  "lint-staged": {
    "**/**/*.{js,ts,tsx,vue,json}": ["eslint --fix"]
  },
  "devDependencies": {
    "@aiou/eslint-config": "^0.11.0",
    "@changesets/cli": "^2.24.4",
    "@types/node": "^20.1.3",
    "cz-emoji": "1.3.2-canary.2",
    "eslint": "^8.23.0",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "npm-run-all": "^4.1.5",
    "typescript": "4.4.4"
  }
}
