{
  "name": "@vsit/client",
  "version": "0.0.0",
  "type": "module",
  "description": "A Repl client based on vite",
  "keywords": [
    "vsit",
    "client",
    "repl"
  ],
  "license": "MIT",
  "homepage": "https://github.com/vsit#readme",
  "repository": {
    "url": "git+https://github.com/vsit.git",
    "type": "git",
    "directory": "packages/client"
  },
  "bugs": {
    "url": "https://github.com/vsit/issues"
  },
  "author": {
    "name": "JiangWeixian",
    "email": "jiangweixian1994@gmail.com"
  },
  "main": "dist-electron/main/index.js",
  "scripts": {
    "test": "echo test",
    "vitest": "echo test",
    "clean": "rimraf dist-client dist dist-electron",
    "dev": "vite",
    "dev:electron": "vite --config ./vite.config.electron.mts",
    "build": "pnpm run clean && vite build",
    "build:electron": "vite build --config ./vite.config.electron.mts && electron-builder",
    "publish:electron": "vite build --config ./vite.config.electron.mts && electron-builder --publish=always",
    "preview": "vite preview",
    "preview:electron": "vite preview --config ./vite.config.electron.mts"
  },
  "dependencies": {
    "electron-log": "5.1.2",
    "electron-updater": "6.1.7",
    "esbuild": "0.19.11",
    "rollup": "4.9.4",
    "vite": "5.0.11",
    "vsit": "workspace:*"
  },
  "devDependencies": {
    "@codemirror/autocomplete": "6.7.1",
    "@codemirror/commands": "6.2.4",
    "@codemirror/lang-css": "6.2.0",
    "@codemirror/lang-html": "6.4.4",
    "@codemirror/lang-javascript": "6.1.9",
    "@codemirror/language": "6.7.0",
    "@codemirror/state": "6.2.1",
    "@codemirror/view": "6.13.0",
    "@lezer/highlight": "1.1.6",
    "@svgr-rs/svgrs-plugin": "^0.1.0",
    "@tailwindcss/typography": "0.5.7",
    "@types/debug": "^4.1.8",
    "@types/lodash-es": "^4.17.8",
    "@types/node": "^20.1.3",
    "@uiw/codemirror-theme-atomone": "^4.21.2",
    "autoprefixer": "10.4.16",
    "clsx": "1.2.1",
    "console-feed": "3.5.0",
    "daisyui": "2.24.0",
    "electron": "^28.1.0",
    "electron-builder": "^24.6.3",
    "focus-if-need": "^0.1.0",
    "lodash-es": "^4.17.21",
    "npm-run-all": "^4.1.5",
    "postcss": "8.4.31",
    "prettier": "^3.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rimraf": "^3.0.2",
    "solid-js": "1.8.8",
    "tailwind-cssgg": "^0.0.1",
    "tailwindcss": "3.3.3",
    "typescript": "5.1.6",
    "vite-plugin-document": "^0.1.1",
    "vite-plugin-electron": "^0.28.0-beta.2",
    "vite-plugin-electron-renderer": "^0.14.5",
    "vite-plugin-inspect": "^0.7.26",
    "vite-plugin-pages": "^0.30.1",
    "vite-plugin-pwa": "^0.16.4",
    "vite-plugin-solid": "2.8.0",
    "workbox-routing": "7.0.0",
    "workbox-strategies": "7.0.0",
    "workbox-window": "7.0.0"
  },
  "debug": {
    "env": {
      "VITE_DEV_SERVER_URL": "http://127.0.0.1:3344/"
    }
  },
  "build": {
    "productName": "vsit",
    "publish": {
      "provider": "github",
      "owner": "jiangweixian",
      "repo": "vsit"
    },
    "files": [
      "**/node_modules/rollup/**",
      "dist",
      "dist-electron"
    ],
    "mac": {
      "artifactName": "${productName}_${version}.${ext}",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ],
      "artifactName": "${productName}_${version}.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "deleteAppDataOnUninstall": false
    }
  }
}
